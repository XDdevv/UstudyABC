<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.courses.CourseDetails">

    <?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">


        <ImageView
            android:id="@+id/courseBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_banner"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseBanner"
            android:layout_marginTop="8dp"
            android:text="Course Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/courseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseName"
            android:layout_marginTop="4dp"
            android:text="Course Description"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/courseCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseDescription"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_background"
                android:padding="8dp"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/coursePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseCategories"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/price_background"
            android:padding="8dp"
            android:text="Price"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/courseTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseCategories"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Date Added"
            android:textColor="@color/dark"
            android:textSize="14sp"/>


        <LinearLayout
            android:id="@+id/courseIntroVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseTimestamp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="@drawable/intro_video_background">

<!--            <ImageView-->
<!--                android:id="@+id/introVideoIcon"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:src="@drawable/ic_play_circle"-->
<!--                tools:ignore="ContentDescription" />-->

            <TextView
                android:id="@+id/introVideoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:text="Watch Intro Video"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>