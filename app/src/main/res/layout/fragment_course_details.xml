<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ui.courses.CourseDetails"
    android:padding="16dp">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/cardview_course_banner">

        <ImageView
            android:id="@+id/courseBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image2"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview_course_banner"
        android:layout_marginTop="28dp"
        android:text="Course Name"
        android:textColor="@color/salmon"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/courseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseName"
        android:layout_marginTop="10dp"
        android:text="@string/lorem_ipsum"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/league_spartan_regular"/>


    <LinearLayout
        android:id="@+id/courseCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/category_background"
            android:paddingVertical="8dp"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/salmon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coursePrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseCategories"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:text="$220.00"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/courseTimestamp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseCategories"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Date Added"
            android:gravity="end"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="14sp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/courseIntroVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseTimestamp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@drawable/intro_video_background">

<!--            <ImageView-->
<!--                android:id="@+id/introVideoIcon"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:src="@drawable/ic_play_circle"-->
<!--                tools:ignore="ContentDescription" />-->

        <TextView
            android:id="@+id/introVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:text="Watch Intro Video"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>

